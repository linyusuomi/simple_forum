{% extends "LinForumBundle::layout.html.twig" %}

{% block body -%}
<div class="container-fluid">
    <div class="row-fluid">
       <div class="span2"></div>
       <div class="span8">
          <h3>Post list</h3>
          <table class="table">
              <thead>
                  <tr>
                      <th>Name</th>
                      <th>Title</th>
                      <th>Image</th>
                      <th>Content</th>
                      <th>Created_at</th>
                      <th>Updated_at</th>
                      <th>Actions</th>
                  </tr>
              </thead>
              <tbody>
              {% for entity in entities %}
                  <tr>
                      <td>{{ entity.name }}</td>
                      <td>{{ entity.title }}</td>
                      <td><img src="{{ app.request.getBaseURL() }}/uploads/{{ entity.path }}" alt="Smiley face" height="70" width="70"></td>
                      <td>{{ entity.content }}</td>
                      <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
                      <td>{% if entity.updatedat %}{{ entity.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
                      <td>
                          <ul>
                              <li>
                                  <a href="{{ path('post_show', { 'id': entity.id }) }}">show</a>
                              </li>
                              <li>
                                  <a href="{{ path('post_edit', { 'id': entity.id }) }}">edit</a>
                              </li>
                          </ul>
                      </td>
                      </tr>
              {% endfor %}
              </tbody>
          </table>
          </div>
          <div class="span2"></div>
      </div>
      
        
<div class="row-fluid">
     <div class="span2"></div>
     <div class="span8">
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
          <fieldset>
            <div id="legend" class="">
              <legend class="">Post form</legend>
            </div>  
          <div class="control-group">

                <!-- Text input-->
                <label class="control-label" for="input01">Name</label>
                <div class="controls">
                  {{ form_widget(form.name) }}
                </div>
              </div>

          <div class="control-group">

                <!-- Text input-->
                <label class="control-label" for="input01">Title</label>
                <div class="controls">
                  {{ form_widget(form.title) }}
                </div>
              </div>

          <div class="control-group">
                <label class="control-label">Image</label>
                <!-- File Upload -->
                <div class="controls">
                  {{ form_widget(form.file) }}
                </div>
              </div>

          <div class="control-group">

                <!-- Textarea -->
                <label class="control-label">Content</label>
                <div class="controls">
                  <div class="textarea">
                        {{ form_widget(form.content) }}
                  </div>
                </div>
              </div>

          <div class="control-group">
                <label class="control-label">Button</label>

                <!-- Button -->
                <div class="controls">
                  {{ form_widget(form.submit, {'attr': {'class': 'btn btn-success'}}) }}
                </div>
              </div>

          </fieldset>
        {{ form_end(form) }}     
      </div>
      </div>
</div>
        
        
</div>
{% endblock %}