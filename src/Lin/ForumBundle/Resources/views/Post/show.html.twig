{% extends "LinForumBundle::layout.html.twig" %}

{% block body -%}
<div class="container-fluid">
  <div class="row-fluid">
     <div class="span2"></div>
     <div class="span8">
     <h3>Single Post</h3>
        <table class="record_properties">
            <tbody class="table">
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ entity.title }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td><img src="{{ app.request.getBaseURL() }}/uploads/{{ entity.path }}" alt="Smiley face" height="70" width="70"></td>
                </tr>
                <tr>
                    <th>Content</th>
                    <td>{{ entity.content }}</td>
                </tr>
                <tr>
                    <th>Created_at</th>
                    <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Updated_at</th>
                    <td>{{ entity.updatedat|date('Y-m-d H:i:s') }}</td>
                </tr>
            </tbody>
        </table>
        <ul class="record_actions">
            <li>
                <a href="{{ path('post') }}">
                    Back to the list
                </a>
            </li>
            <li>
                <a href="{{ path('post_edit', { 'id': entity.id }) }}">
                    Edit
                </a>
            </li>
            <li>{{ form(delete_form) }}</li>
        </ul>     
       <div class="span2"></div>
    </div>
</div>
{% endblock %}
